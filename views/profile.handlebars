<div class="container">
  <div class="row">
      <div class="col text-center mb-4">
        <h3>Exercise Profile for {{session.first_name}} {{session.last_name}}!</h3>
      </div>
  </div>
  
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each this}}
