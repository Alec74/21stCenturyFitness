
<div class="container">
  
  <h2 class="mt-2 text-center">Create Workout</h2>

  <div class="row justify-content-center">
    <div class="create-workout col col-md-8 text-start">
      <form class="form workout-form">
          <div class="form-group mb-2">
          <label for="workout-title" class="form-label">Title</label>
          <input class="form-input form-control" type="text" id="workout-title" />
        </div>
         <div class="d-grid gap-2 mt-5">
        <button class="btn btn-primary" type="submit">Create</button>
      </div>
      </form>
    </div>

    <h2 class="mt-2 text-center">Exercises</h2>

    <div class="accordion accordion-flush col col-md-8" id="exercise_accordion">
      {{#each categories as |category|}}
        <div class="accordion-item category{{id}}">
          <h2 class="accordion-header" id={{id}}>
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#category{{id}}" aria-expanded="false" aria-controls="category{{id}}">
              {{name}}
            </button>
          </h2>

          <div id="category{{id}}" class="accordion-collapse collapse" aria-labelledby="{{id}}" data-bs-parent="#exercise_accordion">
            <div class="accordion-body">
              {{#each exercises as |exercise|}}
                <ul class="list-group">
                  <li class="list-group-item lh-sm">
                    <input type="checkbox" class="form-check-input me-1" value={{exercise.id}}>
                    <h4>{{exercise.name}}</h4>
                    {{{exercise.description}}}
                    {{#if exercise.gif_image}}
                      <div class="exercise-image">
                         <img src="./images/{{gif_image}}" alt="{{name}}" class="gifImage img-fluid float-end">
                      </div>
                    {{/if}}
                  </li>
                </ul>
              {{/each}}
          </div>
        </div>
      {{/each}}
    </div>
  
  </div>
</div>
<script src="./js/exercise.js"></script>

